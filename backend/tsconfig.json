{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "lib": [
      "es6",
      "es2018.promise"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}